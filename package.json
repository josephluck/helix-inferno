{
  "name": "helix-inferno",
  "version": "1.0.2",
  "description": "Inferno renderer for helix",
  "main": "lib/index.js",
  "files": [
    "src/",
    "lib/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/josephluck/helix-inferno"
  },
  "types": "./lib/index.d.ts",
  "scripts": {
    "dist": "rm -rf ./lib && mkdir lib && tsc && npm run browserify && npm run minify",
    "browserify": "browserify -g babelify lib/index.js -o lib/bundle.js",
    "minify": "uglifyjs lib/bundle.js -c -m -o lib/bundle.min.js",
    "deploy": "npm install && npm run lib && npm publish"
  },
  "author": "Joseph Luck",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babelify": "^7.3.0",
    "browserify": "^14.1.0",
    "helix-js": "file:../helix",
    "tsify": "^3.0.1",
    "tslint": "^4.4.2",
    "tslint-config-standard": "^4.0.0",
    "typescript": "^2.2.1",
    "uglify-js": "^2.7.5"
  },
  "dependencies": {
    "helix-js": "^1.1.4",
    "inferno": "^1.5.6",
    "inferno-create-element": "^1.5.6"
  }
}
